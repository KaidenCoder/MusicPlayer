<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Albums"
            android:label="@string/albumsManifest"/>
        <activity
            android:name=".Artists"
            android:label="@string/artistsManifest"/>
        <activity
            android:name=".Genres"
            android:label="@string/genresManifest"/>
        <activity
            android:name=".Payment"
            android:label="@string/paymentManifest"/>
        <activity
            android:name=".PlayingNow"
            android:label="@string/playMusic"/>
        <activity
            android:name=".Playlists"
            android:label="@string/playListsManifest"/>
        <activity android:name=".Songs"
            android:label="@string/songsManifest"/>
    </application>

</manifest>